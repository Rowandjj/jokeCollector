<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exception_icon"
            android:layout_width="48dp"
            android:layout_height="37dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wifi"/>

        <TextView
            android:id="@+id/exception_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exception_icon"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="@string/exception_text"
            android:textColor="@color/pink_third"
            android:textSize="@dimen/text_size_small_secondary"/>

    </RelativeLayout>

</FrameLayout>