<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_joke_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                tools:text="楚奕RJ"/>

            <TextView
                android:id="@+id/tv_joke_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="@dimen/text_size_small_secondary"
                tools:text="16分钟以前"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_joke_content"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            tools:text="想嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻嘻按时打算发发"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_joke_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="@dimen/text_size_small"
                tools:text="OO 17"/>

            <TextView
                android:id="@+id/tv_joke_unlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_joke_like"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="@dimen/text_size_small"
                tools:text="XX 10"/>

            <TextView
                android:id="@+id/tv_tucao_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_joke_unlike"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="@dimen/text_size_small"
                tools:text="吐槽"/>

            <TextView
                android:id="@+id/tv_tucao_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_tucao_text"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="@dimen/text_size_small"
                tools:text="6"/>

            <ImageView
                android:id="@+id/iv_joke_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_horiz_grey600_24dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
